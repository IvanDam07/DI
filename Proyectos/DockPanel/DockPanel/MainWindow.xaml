<Window x:Class="DockPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DockPanel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel Name="contenedor">
            <Button Content="BTN 1 1" DockPanel.Dock="Top" Width="NaN"/>
            <Button Content="BTN 0 2" DockPanel.Dock="Bottom" Width="NaN"/>
            <Label Content="Label" DockPanel.Dock="Left" Width="0"/>
            <TextBox Text="TextBox" DockPanel.Dock="Right" Width="100"/>
            <RadioButton Content="RadioButton" Width="95"/>

        </DockPanel>

    </Grid>
</Window>
