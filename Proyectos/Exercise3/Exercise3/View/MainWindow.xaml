<Window x:Class="Exercise3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exercise3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="LightBlue">
        <TextBlock HorizontalAlignment="Left" Margin="25,26,0,0" TextWrapping="Wrap" Text="Enter your nickname: " VerticalAlignment="Top" Height="20" Width="180" Background="Pink" TextAlignment="Center"/>
        <TextBox x:Name="tbNickname" HorizontalAlignment="Left" Margin="62,50,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="330" Height="20"/>

        <DatePicker Name="dpDate" Margin="62,108,538,251" Width="200" Height="75"/>
        <TextBlock HorizontalAlignment="Left" Margin="25,83,0,0" TextWrapping="Wrap" Text="Enter the date: " VerticalAlignment="Top" Height="20" Width="180" Background="Pink" TextAlignment="Center"/>

        <TextBlock HorizontalAlignment="Left" Margin="25,210,0,0" TextWrapping="Wrap" Text="Enter your level: " VerticalAlignment="Top" Height="20" Width="180" Background="Pink" TextAlignment="Center"/>
        <ComboBox Name="cbLevel" Width="100" Height="25" Margin="62,230,638,179"/>

        <TextBlock HorizontalAlignment="Left" Margin="25,280,0,0" TextWrapping="Wrap" Text="Enter your score: " VerticalAlignment="Top" Height="20" Width="180" Background="Pink" TextAlignment="Center"/>
        <TextBox x:Name="tbScore" HorizontalAlignment="Left" Margin="62,305,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="330" Height="20"/>

        <Button Name="btnAgregar" Content="Add player" HorizontalAlignment="Left" Margin="580,108,0,0" VerticalAlignment="Top" Height="40" Width="120" Click="btnAgregar_Click"/>
        <Button Name="btnBorrar" Content="Delete player" HorizontalAlignment="Left" Margin="580,210,0,0" VerticalAlignment="Top" Height="40" Width="120" Click="btnBorrar_Click"/>
        <Button Name="btnModificar" Content="Modify player" HorizontalAlignment="Left" Margin="580,158,0,0" VerticalAlignment="Top" Height="40" Width="120" Click="btnModificar_Click"/>
    </Grid>
</Window>
