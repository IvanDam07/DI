<Window x:Class="GESTPRO_IvanSobrinoCalzado.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GESTPRO_IvanSobrinoCalzado"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="33*"/>
            <RowDefinition Height="401*"/>
        </Grid.RowDefinitions>

        <Grid Background="#FF670038" Grid.Row="0">
            <Label Content="GESTPRO" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Cascadia Code Light" Foreground="White" FontStretch="ExtraExpanded" FontSize="16" />
        </Grid>
        <Grid Background="#FFFFE8D0" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition Width="43*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30*"/>
                <RowDefinition Height="371*"/>
            </Grid.RowDefinitions>
        </Grid>

        <TabControl TabStripPlacement="Left" Grid.Row="2" Margin="0,27,0,0" BorderBrush="{x:Null}" Background="{x:Null}"  >
            <TabItem Header="INICIO" FontFamily="Comic Sans MS" BorderBrush="{x:Null}" Background="#FFF993FF" FontWeight="Bold">
                <Grid Background="#FFFFE8D0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1.5*"/>
                        <RowDefinition Height="1.5*"/>
                        <RowDefinition Height="1.5*"/>
                        <RowDefinition Height="1.5*"/>
                        <RowDefinition Height="1.5*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="1.5*"/>
                    </Grid.ColumnDefinitions>

                    <Image Source="/View/logotipo-ies-maestredecalatrava-1.png" Grid.Row="4" Grid.Column="3"/>
                    <Image Source="/View/palm_3086199.png" Grid.Column="1" Grid.ColumnSpan="3" Margin="193,16,113,63" Grid.RowSpan="4" Grid.Row="1" Opacity="0.3"/>
                    <Ellipse HorizontalAlignment="Left" Height="57" Margin="10,0,0,0" VerticalAlignment="Center" Width="133" Fill="#FFF993FF" Grid.Row="1" Grid.ColumnSpan="2">
                        <UIElement.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </UIElement.RenderTransform>
                    </Ellipse>
                    <Button Content="PROYECTOS" Name="bProyectos" Grid.Row="1" Width="110" Height="40" FontSize="15" FontFamily="Comic Sans MS" FontWeight="Bold" Margin="21,16,0,17" Background="{x:Null}" BorderBrush="{x:Null}" Click="bProyectos_Click"/>

                    <Ellipse HorizontalAlignment="Center" Height="57" VerticalAlignment="Center" Width="133" Fill="#FFF993FF" Grid.Row="1" Grid.Column="1">
                        <UIElement.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </UIElement.RenderTransform>
                    </Ellipse>
                    <Button Content="ESTADISTICAS" Name="bEstadistica" Grid.Row="1" Grid.Column="1" Width="130" Height="40" FontSize="15" FontFamily="Comic Sans MS" FontWeight="Bold" Background="{x:Null}" BorderBrush="{x:Null}" Click="bEstadistica_Click" />

                    <Ellipse HorizontalAlignment="Left" Height="57" VerticalAlignment="Top" Width="133" Fill="#FFF993FF" Grid.Row="2" Grid.Column="1" Margin="34,7,0,0">
                        <UIElement.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </UIElement.RenderTransform>
                    </Ellipse>
                    <Button Content="USUARIOS" Name="bUsuarios" Grid.Row="2" Grid.Column="1" Width="110" Height="40" FontSize="15" FontFamily="Comic Sans MS" FontWeight="Bold" Background="{x:Null}" BorderBrush="{x:Null}" Margin="46,17,31,17" Click="bUsuarios_Click"/>

                    <Ellipse HorizontalAlignment="Left" Height="57" VerticalAlignment="Center" Width="133" Fill="#FFF993FF" Grid.Row="2" Margin="10,0,0,0" Grid.ColumnSpan="2">
                        <UIElement.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </UIElement.RenderTransform>
                    </Ellipse>
                    <Button Content="EMPLEADOS" Name="bEmpleados" Grid.Row="2" Width="110" Height="40" FontSize="15" FontFamily="Comic Sans MS" FontWeight="Bold" Background="{x:Null}" BorderBrush="{x:Null}" Margin="21,17,0,17" Click="bEmpleados_Click"/>

                    <Ellipse HorizontalAlignment="Left" Height="57" Margin="10,6,0,0" VerticalAlignment="Top" Width="133" Fill="#FFF993FF" Grid.Row="3" Grid.ColumnSpan="2">
                        <UIElement.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </UIElement.RenderTransform>
                    </Ellipse>
                    <Button Content="G-ECONÓMICA" Name="bEconomica" Grid.Row="3" VerticalAlignment="Top" Height="40" FontSize="14" FontFamily="Comic Sans MS" FontWeight="Bold" Background="{x:Null}" Margin="15,14,174,0" BorderBrush="{x:Null}" Grid.ColumnSpan="2" Click="bEconomica_Click"/>
                </Grid>
            </TabItem>

            <TabItem Header="PROYECTO" Name="tiProyecto" FontFamily="Comic Sans MS" BorderBrush="{x:Null}" Background="#FFF993FF">
                <Grid Background="#FFFFE8D0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1.5*"/>
                        <RowDefinition Height="1.5*"/>
                        <RowDefinition Height="1.5*"/>
                        <RowDefinition Height="1.5*"/>
                        <RowDefinition Height="1.5*"/>
                        <RowDefinition Height="1.5*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <DataGrid Name="dgProyectos" Grid.ColumnSpan="4" Margin="32,30,122,31" Grid.RowSpan="3" Grid.Row="2" SelectionChanged="DataGrid_SelectionChanged" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Código Proyecto" Binding="{Binding CodigoProyecto}" Width="*"/>
                            <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                            <DataGridTextColumn Header="Fecha Inicio" Binding="{Binding FechaInicio, StringFormat=d}" Width="*"/>
                            <DataGridTextColumn Header="Fecha Fin" Binding="{Binding FechaFin, StringFormat=d}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="4">
                        <Label Content="Código Proyecto" Grid.Row="1" Grid.Column="4"/>
                        <TextBox x:Name="tbCodigo" Grid.Row="1" Grid.Column="4" Background="AliceBlue" Opacity="0.8" Width="130" Height="25"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Grid.Row="2" Grid.Column="4">
                        <Label Content="Nombre"/>
                        <TextBox x:Name="tbNombre" Background="AliceBlue" Opacity="0.8" Width="130" Height="25"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Grid.Row="3" Grid.Column="4">
                        <Label Content="Fecha Inicio"/>
                        <DatePicker x:Name="dpFechaInicio" Background="AliceBlue" Opacity="0.8" Width="130" Height="25"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Grid.Row="4" Grid.Column="4">
                        <Label Content="Fecha Fin"/>
                        <DatePicker x:Name="dpFechaFin" Background="AliceBlue" Opacity="0.8" Width="130" Height="25"/>
                    </StackPanel>
                    <Image Source="/View/palm_3086199.png" Grid.Column="3" Margin="10,-2,127,45" Grid.RowSpan="3" Opacity="0.3" Grid.ColumnSpan="2"/>
                    <Image Source="/View/logotipo-ies-maestredecalatrava-1.png" Grid.Row="5" Grid.Column="0"/>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="5" Grid.ColumnSpan="3" Grid.Column="2">
                        <Button Content="Añadir" Name="bAnadir" Width="120" Height="25" Margin="0,0,5,0" Background="#FFA20094" Click="bAnadir_Click" />
                        <Button Content="Modificar" Name="bModificar" Width="120" Height="25" Margin="0,0,5,0" Background="#FFA20094" Click="bModificar_Click"/>
                        <Button Content="Eliminar" x:Name="bEliminar" Width="120" Height="25" Background="#FFA20094" Click="bEliminar_Click"/>
                    </StackPanel>
                    <TextBox Name="tbBuscador" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Width="350" Height="25" Margin="54,19,7,18" TextChanged="tbBuscador_TextChanged"/>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="0" Grid.Column="3">
                        <Button Content="Insertar" Name="bInsertar" Width="120" Height="25" Click="bInsertar_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Name="tiEmpleados" Header="EMPLEADOS" FontFamily="Comic Sans MS" BorderBrush="{x:Null}" Background="#FFF993FF"/>

            <TabItem Name="tiGEconomica" Header="G. ECONOMICA" FontFamily="Comic Sans MS" BorderBrush="{x:Null}" Background="#FFF993FF"/>

            <TabItem Name="tiEstadisticas" Header="ESTADÍSTICAS" FontFamily="Comic Sans MS" BorderBrush="{x:Null}" Background="#FFF993FF"/>

            <TabItem Name="tiUsuarios" Header="USUARIOS" FontFamily="Comic Sans MS" BorderBrush="{x:Null}" Background="#FFF993FF"/>
            <Grid/>
        </TabControl>
    </Grid>
</Window>
